{
  "manifest_version": 3,
  "name": "B站点歌插件",
  "version": "1.0.0",
  "description": "在B站视频卡片上添加点歌按钮，发送点歌请求到指定服务器",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.bilibili.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "点歌插件设置"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
